<FileChoosePopup>:
    title: "Choose a .TXT File or .ASM File"
    size_hint: .9, .9
    auto_dismiss: False

    MDBoxLayout:
        orientation: "vertical"
        FileChooser:
            id: filechooser
            FileChooserIconLayout

        MDBoxLayout:
            size_hint: (1, 0.1)
            pos_hint: {'center_x': .5, 'center_y': .5}
            spacing: 20
            Button:
                text: "Cancel"
                on_release: root.dismiss()
            Button:
                text: "Load"
                on_release: root.load(filechooser.selection)
                id: ldbtn
                disabled: True if filechooser.selection==[] else False

<Tab>:
    do_default_tab: False
    background_color:(102/255, 51/255, 153/255,1)
    TabbedPanelItem:
        text: 'first tab'
        background_color:(102/255, 51/255, 153/255,1)
        background_normal: ''
       
        MDBoxLayout
            cols:2
            TextInput:
                background_color:(102/255, 51/255, 153/255,1)
                id: newstuff
                markup:True
                text:""
                readonly: True
                cursor_color:(1,1,1,1)
                selection_color:(1/255, 13/255, 153/255,1)
            
            MDLabel
                text:"fuck"

    TabbedPanelItem:
        text: 'Import'
        background_color:(102/255, 51/255, 153/255,1)
        background_normal: ''
        MDStackLayout:
            orientation: 'lr-tb'
            size_hint_y: None
            height: 30
            spacing: 5
            MDLabel:
                text: ''
                size_hint_x: 1
            MDLabel:
                text: ''
                size_hint_x: 0.2
            Button:
                text: 'Choose File'
                size_hint_x: 0.2
                on_press: root.open_popup()
            TextInput:
                id: get_file
                readonly: True
                size_hint_x: 0.4
            MDLabel:
                text: ''
                size_hint_x: 0.2